{
  "name": "{{projectName}}",
  "version": "0.1.0",
  "description": "Scaffolding tool for my development",
  "main": "src/index.js",
  "bin": {
    "{{cmd}}": "./bin/index.js"
  },
  "man": "./man/doc.1",
  "engines": {
    "node": ">=10.9.0"
  },
  "scripts": {
    "lint": "eslint src bin test",
    "format": "prettier --config .prettierrc.js --write src/**/*.js bin/**/*.js",
    "inspect": "jsinspect src bin",
    "test": "echo todo",
    "prepublish": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{user}}/{{projectName}}.git"
  },
  "keywords": [
    "scaffolding",
    "cli"
  ],
  "author": "{{user}}",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/{{user}}/{{projectName}}/issues"
  },
  "homepage": "https://github.com/{{user}}/{{projectName}}#readme",
  "files": [
    "/bin",
    "/src",
    "/man",
    "/docs"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --config .prettierrc.js --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.13",
    "jsinspect": "^0.12.7",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "figlet": "^1.2.0",
    "fs-extra": "^7.0.0",
    "ora": "^3.0.0",
    "semver": "^5.5.1",
    "signale": "^1.2.1",
    "yargonaut": "^1.1.3",
    "yargs": "^12.0.0"
  }
}
